<odoo>
    <data>
        <record id='widget_action' model='ir.actions.act_window'>
            <field name="name">Widget</field>
            <field name="res_model">bought.widget</field>
            <field name="view_mode">tree,form,kanban</field>
        </record>
        <record id="widget_view_form" model="ir.ui.view">
            <field name="name">Widget</field>
            <field name="model">bought.widget</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="title"/>
                                <field name="title_font_size"/>
                                <field name="title_color" widget="color"/>
                                <field name="description"/>
                                <field name="description_font_size"/>
                                <field name="description_color" widget="color"/>
                                <field name="store_id"/>
                                <field name="button_text"/>
                                <field name="button_text_color" widget="color"/>
                                          <field name="button_border_color" widget="color" />
                                <field name="button_bg_color" widget="color" />
                                <field name="product_included"/>
                                <field name="numbers_product"/>
                                <field name="status"/>
                            </group>
                            <group>
                                <field name="store_id"/>
                                <field name="product_recommend"/>
                                <field name="product_exclude"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="widget_view_tree" model="ir.ui.view">
            <field name="name">Bought Widget tree</field>
            <field name="model">bought.widget</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="store_id"/>
                    <field name="title"/>
                </tree>
            </field>
        </record>
        <menuitem name="Widget" id="widget_menu" action="widget_action" parent="bought_base_menu"/>
    </data>
</odoo>