<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id='shopify_product_action' model='ir.actions.act_window'>
        <field name="name">Product</field>
        <field name="res_model">shopify.product</field>
        <field name="view_mode">tree,form,kanban</field>
    </record>
    <record id="shopify_product_view_form" model="ir.ui.view">
        <field name="name">bought product form</field>
        <field name="model">shopify.product</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="post_id"/>
                        <field name="compare_at_price"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="shopify_product_view_tree" model="ir.ui.view">
        <field name="name">bought product tree</field>
        <field name="model">shopify.product</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>
    <menuitem name="Bought Together" id="bought_base_menu"/>
    <menuitem name="Product" id="bought_menu" action="shopify_product_action" parent="bought_base_menu"/>
</odoo>
