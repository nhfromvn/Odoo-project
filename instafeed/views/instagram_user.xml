<odoo>
    <data>
        <record id='ig_user_action' model='ir.actions.act_window'>
            <field name="name">IG User</field>
            <field name="res_model">instagram.user</field>
            <field name="view_mode">tree,form,kanban</field>
        </record>
        <record id="ig_user_view_form" model="ir.ui.view">
            <field name="name">IG User form</field>
            <field name="model">instagram.user</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="user_id"/>
                            <field name="username"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="ig_user_view_tree" model="ir.ui.view">
            <field name="name">IG User tree</field>
            <field name="model">instagram.user</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="user_id"/>
                    <field name="username"/>
                </tree>
            </field>
        </record>
        <menuitem name="Instagram User" id="ig_user_menu" action="ig_user_action" parent="instafeed_base_menu"
                  sequence="100"/>
    </data>
</odoo>