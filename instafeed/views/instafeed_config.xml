<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="s_res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.instafeed</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="15"/>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('settings')]" position="inside">
                    <div class="app_settings_block" data-string="Instafeed Config" string="Instafeed Config">
                        <h2>Instafeed Config</h2>
                        <div class="row o_settings_container mt16">
                            <div class="col-md-6 o_setting_box">
                                <div class="o_setting_right_pane">
                                    <label for="api_key_instafeed" class="oe_inline o_form_label"/>
                                    <div class="text-muted">
                                        Instafeed API Key
                                    </div>
                                </div>
                                <div class="o_setting_right_pane">
                                    <field name="api_key_instafeed"/>
                                </div>
                            </div>

                            <div class="col-md-6 o_setting_box">
                                <div class="o_setting_right_pane">
                                    <label for="secret_key_instafeed" class="oe_inline o_form_label"/>
                                    <div class="text-muted">
                                        Instafeed Secret Key
                                    </div>
                                </div>
                                <div class="o_setting_right_pane">
                                    <field name="secret_key_instafeed"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div style="display:flex;
                                 gap:20px">
                        <div class="text-muted">
                            Instagram app id
                        </div>
                        <div class="o_setting_right_pane">
                            <field name="ig_app_id"/>
                        </div>
<!--                        <div class="text-muted">-->
<!--                            Instagram api key-->
<!--                        </div>-->
<!--                        <div class="o_setting_right_pane">-->
<!--                            <field name="api_key_instagram"/>-->
<!--                        </div>-->
                        <div class="text-muted">
                            Instagram secret key
                        </div>
                        <div class="o_setting_right_pane">
                            <field name="secret_key_instagram"/>
                        </div>
                    </div>
                    <div style="display:flex;
                                 gap:20px">
                        <div class="text-muted">
                            Facebook app id
                        </div>
                        <div class="o_setting_right_pane">
                            <field name="fb_app_id"/>
                        </div>
<!--                        <div class="text-muted">-->
<!--                            Facebook api key-->
<!--                        </div>-->
<!--                        <div class="o_setting_right_pane">-->
<!--                            <field name="api_key_facebook"/>-->
<!--                        </div>-->
                        <div class="text-muted">
                            Facebook secret key
                        </div>
                        <div class="o_setting_right_pane">
                            <field name="secret_key_facebook"/>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

        <record id="action_shopify_configuration" model="ir.actions.act_window">
            <field name="name">Settings</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.config.settings</field>
            <field name="view_mode">form</field>
            <field name="target">inline</field>
            <field name="context">{'module': 'instafeed'}</field>
        </record>
    </data>
</odoo>
